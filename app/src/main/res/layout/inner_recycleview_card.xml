<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/id_instituction"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/id_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="STUDENT_NAME"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/id_instituction"
        app:layout_constraintTop_toTopOf="@+id/id_instituction" />

    <TextView
        android:id="@+id/id_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="REGISTRATION_NUMBER"
        android:textColor="@color/colorSecondaryLight"
        app:layout_constraintStart_toEndOf="@+id/id_instituction"
        app:layout_constraintTop_toBottomOf="@+id/id_student_name" />

    <TextView
        android:id="@+id/id_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="SUBJECT"
        app:layout_constraintStart_toEndOf="@+id/id_instituction"
        app:layout_constraintTop_toBottomOf="@+id/id_registration" />

    <TextView
        android:id="@+id/id_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="DATE"
        app:layout_constraintStart_toEndOf="@+id/id_subject"
        app:layout_constraintTop_toTopOf="@+id/id_subject" />

</android.support.constraint.ConstraintLayout>
